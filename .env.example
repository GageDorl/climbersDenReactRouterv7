# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/climbersden_dev"

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET="your-super-secret-session-key-change-in-production"

# Server
NODE_ENV="development"
PORT=3000

# Cloudinary (get free account at cloudinary.com)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
# Optional: Cloudinary upload presets
CLOUDINARY_UPLOAD_PRESET_PROFILE="profile_photos"
CLOUDINARY_UPLOAD_PRESET_POST="post_media"
CLOUDINARY_UPLOAD_PRESET_JOURNAL="journal_media"

# Weather API
OPENWEATHER_API_KEY="your-openweathermap-api-key"
# Get free API key at: https://openweathermap.org/api

# OpenBeta GraphQL (public, no API key required)
OPENBETA_API_URL="https://api.openbeta.io/"

# Mapbox API (for interactive maps)
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"
MAPBOX_STYLE_URL="mapbox://styles/mapbox/outdoors-v12"
# Get free account (50k map loads/month) at: https://www.mapbox.com/
# Alternative styles: streets-v12, satellite-streets-v12, outdoors-v12

# Email (for password reset) - Use Mailtrap for dev
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="your-mailtrap-user"
SMTP_PASS="your-mailtrap-pass"
EMAIL_FROM="noreply@climbersden.com"

# Optional: Redis for Socket.IO scaling in production
# REDIS_URL="redis://localhost:6379"
